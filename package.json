{
    "name": "events-distance-calculator",
    "version": "0.1.0",
    "description": "Calculates distances between your city and a bunch of events",
    "main": "src/index.js",
    "type": "module",
    "scripts": {
        "start": "node src/index.js",
        "test": "echo \"Error: no test specified\" && exit 1",
        "lint": "eslint src/**/*.js",
        "lint:fix": "eslint src/**/*.js --fix",
        "format": "prettier --check \"./**/*.{js,jsx,json}\"",
        "format:fix": "prettier --write \"./**/*.{js,jsx,json}\""
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/gcruchon/events-distance-calculator.git"
    },
    "keywords": [
        "distance",
        "matrix"
    ],
    "author": "Gilles CRUCHON <gilles.cruchon@gmail.com>",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/gcruchon/events-distance-calculator/issues"
    },
    "homepage": "https://github.com/gcruchon/events-distance-calculator#readme",
    "dependencies": {
        "debug": "^4.3.3",
        "dotenv": "^16.0.0",
        "express": "^4.17.2",
        "firebase-admin": "^10.0.2",
        "http-errors": "^2.0.0",
        "morgan": "^1.10.0",
        "openrouteservice-js": "^0.1.31"
    },
    "devDependencies": {
        "eslint": "^8.8.0",
        "eslint-config-airbnb": "^19.0.4",
        "eslint-config-prettier": "^8.3.0",
        "eslint-plugin-import": "^2.25.4",
        "eslint-plugin-jsx-a11y": "^6.5.1",
        "eslint-plugin-react": "^7.28.0",
        "eslint-plugin-react-hooks": "^4.3.0",
        "prettier": "^2.5.1"
    },
    "prettier": {
        "trailingComma": "es5",
        "tabWidth": 4,
        "singleQuote": true,
        "arrowParens": "avoid"
    },
    "eslintConfig": {
        "env": {
            "browser": true,
            "es2021": true
        },
        "extends": [
            "airbnb-base",
            "prettier"
        ],
        "parserOptions": {
            "ecmaVersion": "latest",
            "sourceType": "module"
        },
        "rules": {
            "import/extensions": 0,
            "import/no-unresolved": [
                "error",
                {
                    "ignore": [
                        "^firebase-admin/.+"
                    ]
                }
            ],
            "no-console": [
                "error",
                {
                    "allow": [
                        "debug",
                        "error"
                    ]
                }
            ]
        }
    }
}
